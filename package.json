{
  "name": "tocino-ui",
  "version": "1.0.0",
  "description": "Tocino UI is the experimental design system for the Web",
  "scripts": {
    "build:packages": "pnpm --filter \"@tocino-ui/*\" build",
    "changeset": "changeset",
    "clear": "rimraf 'packages/*/{lib,node_modules}' && rimraf node_modules",
    "format": "prettier --write \"**/*.{ts,tsx,md}\"",
    "generate": "plop",
    "lint": "eslint packages/**/**/src --ext .ts,.tsx --config .eslintrc.js --cache",
    "postinstall": "husky install",
    "release": "pnpm build:packages && pnpm release:only",
    "release:only": "changeset publish --registry=https://registry.npmjs.com/",
    "test": "jest --passWithNoTests",
    "version": "changeset version"
  },
  "keywords": [
    "Design System"
  ],
  "author": "JingHuang Su",
  "license": "ISC",
  "private": true,
  "packageManager": "pnpm@8.6.12",
  "devDependencies": {
    "@babel/core": "^7.21.8",
    "@babel/preset-env": "7.21.5",
    "@babel/preset-react": "^7.18.6",
    "@babel/preset-typescript": "^7.21.5",
    "@changesets/cli": "^2.26.2",
    "@commitlint/cli": "^17.7.1",
    "@commitlint/config-conventional": "^17.7.0",
    "@testing-library/dom": "^9.3.1",
    "@testing-library/jest-dom": "^6.0.0",
    "@testing-library/react": "^14.0.0",
    "@testing-library/user-event": "^14.4.3",
    "@tocino-ui/tsconfig": "workspace:*",
    "@types/babel__core": "^7",
    "@types/babel__preset-env": "^7.9.3",
    "@types/jest": "^29.2.5",
    "@types/node": "^18.11.18",
    "@typescript-eslint/parser": "^6.7.2",
    "babel-jest": "^29.5.0",
    "eslint": "^8.39.0",
    "eslint-config-eslint": "^7.0.0",
    "eslint-config-prettier": "^8.3.0",
    "husky": "^8.0.3",
    "jest": "^29.0.1",
    "jest-environment-jsdom": "^29.0.1",
    "lint-staged": "^14.0.1",
    "plop": "^4.0.0",
    "prettier": "^3.0.0",
    "ts-jest": "^29.1.0",
    "turbo": "^1.10.13"
  }
}
