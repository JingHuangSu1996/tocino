{
  "name": "@tocino-ui/ripple",
  "version": "1.0.0",
  "description": "react Ripple",
  "license": "MIT",
  "source": "src/index.ts",
  "main": "dist/index.js",
  "module": "dist/esm/index.js",
  "types": "dist/index.d.ts",
  "files": [
    "dist",
    "README.md",
    "src"
  ],
  "repository": {
    "type": "git",
    "url": "git@github.com:JingHuangSu1996/tocino.git"
  },
  "sideEffects": false,
  "publishConfig": {
    "access": "public"
  },
  "bugs": {
    "url": "https://github.com/JingHuangSu1996/tocino/issues"
  },
  "scripts": {
    "test": "echo \"Error: run tests from root\" && exit 1",
    "build": "tsup src/index.ts --loader .ts=tsx --minify --format esm,cjs --dts --sourcemap --legacy-output --external react",
    "dev": "tsup src/index.ts --format esm,cjs --watch --dts --legacy-output --external react",
    "clean": "rm -rf .turbo && rm -rf node_modules && rm -rf dist"
  },
  "devDependencies": {
    "@tocino-ui/tsconfig": "workspace:*",
    "tsup": "^6.7.0",
    "typescript": "^5.2.2"
  },
  "peerDependencies": {
    "@types/react": "*",
    "@types/react-dom": "*",
    "react": "^16.8.6 || ^17.0.2 || ^18.0.0",
    "react-dom": "^16.8 || ^17.0 || ^18.0"
  },
  "dependencies": {
    "@tocino-ui/css": "workspace:^",
    "clsx": "^2.0.0"
  }
}
